# ============================================================================
# Perfil Minimal - Setup básico para desenvolvimento geral
# Instala apenas o essencial: ZSH, Git, e utilitários básicos
# ============================================================================

PROFILE_NAME="Minimal"
PROFILE_DESCRIPTION="Setup básico com ZSH, Git e utilitários essenciais"

# Linguagens (apenas uma por padrão)
INSTALL_NODEJS=true
INSTALL_PYTHON=false
INSTALL_JAVA=false  
INSTALL_GOLANG=false

# Gerenciadores de versão
INSTALL_NVM=true
INSTALL_PYENV=false
INSTALL_SDKMAN=false
INSTALL_ASDF=false
INSTALL_PHPENV=false
INSTALL_BUN=false

# Ferramentas opcionais
INSTALL_OPTIONAL_TOOLS=true
INSTALL_DOCKER=false
INSTALL_VSCODE=false

# Utilitários modernos
INSTALL_MODERN_UTILS=true    # bat, exa, ripgrep, fzf

# Temas e plugins ZSH
INSTALL_SPACESHIP_THEME=true
INSTALL_DRACULA_THEME=false
INSTALL_EXTRA_PLUGINS=false  # Apenas plugins essenciais 