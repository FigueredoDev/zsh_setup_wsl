# ============================================================================
# Perfil Frontend - Desenvolvimento web frontend
# Node.js, Bun, e ferramentas para React, Vue, Angular, etc.
# ============================================================================

PROFILE_NAME="Frontend"
PROFILE_DESCRIPTION="Desenvolvimento web frontend (React, Vue, Angular)"

# Linguagens
INSTALL_NODEJS=true
INSTALL_PYTHON=false
INSTALL_JAVA=false
INSTALL_GOLANG=false

# Gerenciadores de versão (foco em JavaScript)
INSTALL_NVM=true
INSTALL_PYENV=false
INSTALL_SDKMAN=false
INSTALL_ASDF=false
INSTALL_PHPENV=false
INSTALL_BUN=true

# Versões específicas para frontend
DEFAULT_NODE_VERSION=lts     # Sempre LTS para estabilidade

# Ferramentas opcionais
INSTALL_OPTIONAL_TOOLS=true
INSTALL_DOCKER=true          # Útil para containers
INSTALL_VSCODE=false         # Use VS Code no Windows com Remote-WSL

# Utilitários modernos
INSTALL_MODERN_UTILS=true

# Temas e plugins ZSH
INSTALL_SPACESHIP_THEME=true
INSTALL_DRACULA_THEME=true   # Tema popular
INSTALL_EXTRA_PLUGINS=true

# Pacotes NPM globais extras para frontend
EXTRA_NPM_PACKAGES=(
    "vite"
    "webpack"
    "@vue/cli"
    "create-react-app"
    "@angular/cli"
    "next"
    "nuxt"
    "tailwindcss"
    "sass"
    "postcss-cli"
) 