# ============================================================================
# Perfil Backend - Desenvolvimento backend/servidor
# Python, Java, Go, Docker e ferramentas de servidor
# ============================================================================

PROFILE_NAME="Backend"
PROFILE_DESCRIPTION="Desenvolvimento backend (Python, Java, Go, APIs)"

# Linguagens (múltiplas para backend)
INSTALL_NODEJS=true          # Para ferramentas e scripts
INSTALL_PYTHON=true          # FastAPI, Django, Flask
INSTALL_JAVA=true            # Spring Boot, microservices
INSTALL_GOLANG=true          # APIs performáticas

# Gerenciadores de versão
INSTALL_NVM=true
INSTALL_PYENV=true
INSTALL_SDKMAN=true
INSTALL_ASDF=true           # Flexibilidade para múltiplas linguagens
INSTALL_PHPENV=false
INSTALL_BUN=false

# Ferramentas essenciais para backend
INSTALL_OPTIONAL_TOOLS=true
INSTALL_DOCKER=true         # Essencial para backend
INSTALL_VSCODE=false        # Use VS Code no Windows com Remote-WSL

# Utilitários modernos
INSTALL_MODERN_UTILS=true

# Temas e plugins ZSH
INSTALL_SPACESHIP_THEME=true
INSTALL_DRACULA_THEME=false
INSTALL_EXTRA_PLUGINS=true

# Ferramentas extras para backend
EXTRA_TOOLS=(
    "postman"               # API testing
    "httpie"               # HTTP client
    "jq"                   # JSON processor
    "docker-compose"       # Container orchestration
    "helm"                 # Kubernetes package manager
) 